<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="icon" href="/icon/laptop.svg" type="image/svg+xml">
    <title>Đặt hàng</title>
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="mynavbar">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link <%= activeTab === 'home' ? 'active' : '' %>" href="/">Sản Phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= activeTab === 'cart' ? 'active' : '' %>" href="/cart">Giỏ Hàng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= activeTab === 'login' ? 'active' : '' %>" href="/admin">Quản Trị Viên</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row mt-3">
            <div class="border border-dark rounded d-flex justify-content-between mb-5">
                <h1 class="mt-3 mb-3">Đặt Hàng</h1>
                <a href="/cart" class="btn btn-danger mt-3 mb-3 " style="margin-right: 20px;padding-top: 10px;">Quay Lại</a>
            </div>
            <% if(error.length > 0) {%>
                <div class="alert alert-danger mt-3 mb-3"><%= error %></div>
            <% } %>
            <div class="mt-3">
                <form method="post" action="/cart/order/add">
                    <div class="col">
                        <div class="col-md-6" style="width: 100%;">
                            <div class="form-group">
                                <label class="control-label mt-3 mb-3" for="client">Tên:</label>
                                <input type="text" class="form-control" name="client" required />
                            </div>
                            <div class="form-group">
                                <label class="control-label mt-3 mb-3" for="Phone">Số điện thoại:</label>
                                <input type="text" class="form-control" name="phone" required />
                            </div>
                            <div class="form-group">
                                <label class="control-label mt-3 mb-3" for="address">Địa chỉ:</label>
                                <input type="text" class="form-control" name="address" required />
                            </div>
                            <div class="form-group">
                                <label class="control-label mt-3 mb-3" for="email">Email:</label>
                                <input type="email" class="form-control" name="email" required />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group d-flex justify-content-end mt-3">
                                <button class="btn btn-success float-right" type="submit">
                                    Đặt hàng
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>