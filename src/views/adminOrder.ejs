<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bootstrap-icons/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Admin Laptop Controller</title>

    <style>
        table {
            width: 100%;
        }

        td {
            padding: 10px;
            /* Thêm khoảng cách nếu cần */
            height: 90px;
            /* Đặt chiều cao cố định cho tất cả các ô td */
            vertical-align: middle;
            /* Căn giữa theo chiều dọc */
        }

        form {
            text-align: center;
            margin: auto;
        }
        
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="mynavbar">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Sản Phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cart">Giỏ Hàng</a>
                    </li>
                    <% if (loggedin) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="/admin" role="button" data-bs-toggle="dropdown">Quản Trị Viên</a>
                            <ul class="dropdown-menu">
                              <li><a class="dropdown-item" href="/admin/order">Đơn Hàng</a></li>
                              <li><a class="dropdown-item" href="/admin/laptop">Sản Phẩm</a></li>
                            </ul>
                          </li>
                        <% } %>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="text" placeholder="Nhập tên sản phẩm">
                    <button class="btn btn-primary" type="button"><i class="bi bi-search"></i></button>
                </form>
                <div class="d-flex" >
                    <% if (loggedin) { %>
                        <form method="post" action="/auth/logout">
                            <button class="btn btn-danger" type="submit">
                                Đăng xuất
                            </button>
                        </form>
                    <% } else { %>
                        <form method="get" action="/auth">
                            <button class="btn btn-primary" type="submit">
                                    Đăng nhập
                            </button>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <div class="content" style="padding-top: 50px;">
        <div class="container">
            <div class="table-responsive">
                <table class="table table-borderless ">
                    <thead>
                        <tr style="text-align: center; vertical-align: middle;">
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Email</th>
                            <th scope="col">Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(function(order) { %>
                            <tr scope="row" style="text-align: center; vertical-align: middle;">
                                <td>
                                    <%= order.id %>
                                </td>
                                <td>
                                    <%= order.customerName %>
                                </td>
                                <td>
                                    <%= order.phone %>
                                </td>
                                <td>
                                    <%= order.email %>
                                </td>
                                <td>
                                    <%= order.address %>
                                </td>
                                <td>
                                    <form method="get" action="/admin/order/detail/<%= order.id %>">
                                        <button class="btn btn-outline-primary" type="submit">
                                            Chi tiết
                                        </button>
                                    </form>
                                </td>
                                <td>
                                    <form method="post" action="/admin/order/delete/<%= order.id %>">
                                        <button class="btn btn-danger" type="submit">
                                            Xóa
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


</body>

</html>