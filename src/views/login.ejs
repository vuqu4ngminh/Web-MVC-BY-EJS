<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/login.css">

    <title>Đăng nhập quản trị viên</title>
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="mynavbar">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link <%= activeTab === 'home' ? 'active' : '' %>" href="/">Sản Phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= activeTab === 'cart' ? 'active' : '' %>" href="/cart">Giỏ Hàng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= activeTab === 'contact' ? 'active' : '' %>" href="/contact">Liên Hệ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= activeTab === 'login' ? 'active' : '' %>" href="/admin">Quản Trị Viên</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row login-form">
            <h1 class="d-flex justify-content-center mb-5">Quản Trị Viên</h1>
            <form class="text-start" method="post" action="/admin/login">
                <label class="form-label mt-3">Username:</label>
                <input class="form-control mt-3" type="text" name="username" required />
                <label class="form-label mt-3">Password:</label>
                <input class="form-control mt-3" type="password" name="password" required />
                <div>
                    <% if(message.length > 0) { %>
                        <div class="alert alert-danger mt-3 mb-3"><%= message %></div>
                    <% } %>
                </div>
                <div class="login-btn">
                    <button class="btn btn-success text-center" type="submit">Đăng Nhập</button>
                </div>
            </form>
        </div>
    </div>
</body>

</html>